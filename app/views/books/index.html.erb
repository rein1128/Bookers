<div class="row">
    <div class="col-xs-3">
    <h2>User info</h2>

   <table class="table"> 
     <tbody>
       <tr>
         <%= attachment_image_tag @user, :profile_image, format: 'png', fallback: "no_image.png", size: "100x100" %>
       </tr>
       <tr>
         <th>name</th>
         <th><%= @user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
       </tr>
     </tbody>
   </table>
      <%= link_to (edit_user_path @user) do %>
          <div class="btn btn-primary btn-md">
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          </div>
      <% end %>
     <h2>New book</h2>
      <%= form_for(@bookn) do |f| %>

     <div class="field row">
      <%= f.label :title %>
     </div>
      <%= f.text_field :title %>

     <div class="field row">
      <%= f.label :body %>
     </div>
      <%= f.text_area :body %>

     <div class="field row">
      <%= f.submit %>
     </div>
   </div>
  <% end %>

    <div class="col-xs-9">
  <h2>Books</h2>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <tr>
    <td>
      <%= attachment_image_tag book.user, :profile_image, format: 'png', fallback: "no_image.png", size: "40x40" %><br>
    </td>
    <td>
    <%= link_to book.title, book_path(book.id) %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>