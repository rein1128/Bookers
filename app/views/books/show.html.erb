<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

  <div class="row">
    <div class="col-xs-3">
    <h2>User info</h2>

   <table class="table">
     <tbody>
       <tr>
         <%= attachment_image_tag @book.user, :profile_image, format: 'png', fallback: "no_image.png", size: "100x100" %>
       </tr>
       <tr>
         <th>name</th>
         <th><%= @book.user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= @book.user.introduction %></th>
       </tr>
     </tbody>
   </table>
       <%= link_to (edit_user_path @user) do %>
          <div class="btn btn-primary btn-md">
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          </div>
       <% end %>
     <h2>New book</h2>
      <%= form_for(@bookn) do |f| %>

     <div class="field row">
      <%= f.label :title %>
     </div>
      <%= f.text_field :title %>

     <div class="field row">
      <%= f.label :body %>
     </div>
      <%= f.text_area :body %>

     <div class="field row">
      <%= f.submit %>
     </div>
   </div>
  <% end %>

  <div class="col-xs-9">
    <h2>Book detail</h2>
   <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :profile_image, format: 'png', fallback: "no_image.png", size: "50x50" %><br>
        <%= link_to @book.user.name, user_path(@book.user.id) %>
      </td>
      <td>
       <%=link_to @book.title, book_path(@book.id) %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <% if @book.user == current_user %>
      <td>
        <%= link_to"edit", edit_book_path(@book)%>
      </td>
      <td>
        <%= link_to"Destroy", book_path(@book),method: :delete %>
      </td>
      <% end %>
    </tr>
    </tbody>
  </table>
</div>
</div>

