

<div class="container">
	<h2>User info</h2>
	<%=form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

		<div class="field">
			<label for="user_name">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
	    </div>
	   <div class="field">
	    	<label for="user_image">Image</label>
            <%= f.attachment_field :profile_image, fallback: "no_image.png" %>
	    </div>
	    <div class="field">
	    	<label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction,  class: 'form-control'%>
	    </div>
	    <div class="field">
	    <%= f.submit "Update User", class:"btn btn-lg btn-base-1 mt-20" %>
	    <% end %>
</div>